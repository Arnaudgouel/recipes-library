{% extends 'base.html.twig' %}

{% block title %}Connexion!{% endblock %}

{% block body %}
<div class="d-flex">
    <div class="d-flex w-100 w-lg-50 vh-100 align-items-center justify-content-center">
        <div class="w-75">
            <form method="post">
                {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                </div>
                    {% endif %}

                <h1 class="h3 font-weight-normal text-center">Connexion à mes recettes de cuisine</h1>
                <h2 class="h4 mt-3 font-weight-light text-center">Espace privé</h2>
                <div class="mt-2">
                    <label for="username">Email</label>
                    <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email"
                        required autofocus placeholder="monemail@gmail.com">
                    </div>
                    <div class="mt-2">
                    <label for="password">Mot de passe</label>
                    <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required
                        placeholder="********">
                    </div>
                    <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">
                    
                    {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html
                <label for="_remember_me">Remember me</label>
                <div class="checkbox mb-3">
                    <input type="checkbox" name="_remember_me" id="_remember_me">
                    <label for="_remember_me">Remember me</label>
                </div>
                #}
        <div class="mt-3 d-grid gap-2">
            <button class="btn btn-lg btn-primary" type="submit">
                Se connecter
            </button>
        </div>
        </form>
        </div>
        </div>

</div>

{% endblock %}
