<div {{ attributes }}>
    {{ form_start(form) }}
    
    {# Affichage des erreurs globales #}
    {# {% if not form.vars.valid and form.vars.submitted %}
        <div class="alert alert-danger mb-4">
            <strong>{{ ux_icon('mdi:alert-circle') }} Le formulaire contient des erreurs :</strong>
            {{ form_errors(form) }}
        </div>
    {% endif %} #}
    
    <div class="row mb-4">
        <div class="col-md-8">
            {{ form_row(form.title) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.image) }}
        </div>
    </div>
    
    <div class="mb-4">
        {{ form_row(form.description) }}
    </div>
    
    <div class="row mb-4">
        <div class="col-md-4">
            {{ form_row(form.servings) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.prepMinutes) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.cookMinutes) }}
        </div>
    </div>
    
    <div class="row mb-4">
        <div class="col-md-6">
            {{ form_row(form.category) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.seasons) }}
        </div>
    </div>
    
    {# Ingrédients avec Live Collection #}
    <div class="admin-card mb-4">
        <div class="admin-card-header">
            <h6 class="admin-card-title mb-0">Ingrédients</h6>
            <div class="d-flex gap-2">
                <button
                    type="button"
                    class="btn btn-outline-success btn-sm d-flex align-items-center gap-1"
                    data-bs-toggle="modal"
                    data-bs-target="#new-ingredient-modal"
                >
                    {{ ux_icon('mdi:plus') }} Nouvel ingrédient
                </button>

                <button
                    type="button"
                    class="btn btn-outline-primary btn-sm d-flex align-items-center gap-1"
                    data-action="live#action"
                    data-live-action-param="addCollectionItem"
                    data-live-name-param="{{form.recipeIngredients.vars.full_name}}"
                >
                    {{ ux_icon('mdi:plus') }} Ajouter un ingrédient
                </button>
            </div>
        </div>
        <div class="admin-card-body">
            <div class="table-responsive table-form-autocomplete">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th style="width: 60px;">Pos.</th>
                            <th>Ingrédient</th>
                            <th style="width: 100px;">Quantité</th>
                            <th style="width: 150px;">Unité</th>
                            <th>Note</th>
                            <th style="width: 50px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for key, ingredientForm in form.recipeIngredients %}
                            <tr>
                                <td>{{ form_widget(ingredientForm.position, {attr: {class: 'form-control form-control-sm'}}) }}</td>
                                <td>{{ form_widget(ingredientForm.ingredient, {attr: {class: 'form-select form-select-sm'}}) }}</td>
                                <td>{{ form_widget(ingredientForm.quantity, {attr: {class: 'form-control form-control-sm'}}) }}</td>
                                <td>
                                    {{ form_widget(ingredientForm.unit, {attr: {class: 'form-select form-select-sm'}}) }}
                                    <small class="text-danger">{{ form_errors(ingredientForm.unit) }}</small>
                                </td>
                                <td>{{ form_widget(ingredientForm.note, {attr: {class: 'form-control form-control-sm'}}) }}</td>
                                <td>
                                    <button
                                        type="button"
                                        class="btn btn-outline-danger btn-sm"
                                        data-action="live#action"
                                        data-live-action-param="removeCollectionItem"
                                        data-live-name-param="{{form.recipeIngredients.vars.full_name}}"
                                        data-live-index-param="{{key}}"
                                    >
                                        {{ ux_icon('mdi:delete') }}
                                    </button>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center text-muted py-3">
                                    Aucun ingrédient. Cliquez sur "Ajouter un ingrédient" pour commencer.
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                {{ form_errors(form.recipeIngredients) }}
            </div>
        </div>
    </div>
    
    {# Étapes avec Live Collection #}
    <div class="admin-card mb-4">
        <div class="admin-card-header">
            <h6 class="admin-card-title mb-0">Étapes de préparation</h6>
            <button
                type="button"
                class="btn btn-outline-primary btn-sm"
                data-action="live#action"
                data-live-action-param="addCollectionItem"
                data-live-name-param="{{form.recipeSteps.vars.full_name}}"
            >
                {{ ux_icon('mdi:plus') }} Ajouter une étape
            </button>
        </div>
        <div class="admin-card-body">
            {% for key, stepForm in form.recipeSteps %}
                <div class="card mb-2">
                    <div class="card-body">
                        <div class="row align-items-start">
                            <div class="col-md-1">
                                {{ form_label(stepForm.position, 'Étape n°') }}
                                {{ form_widget(stepForm.position, {attr: {class: 'form-control form-control-sm'}}) }}
                            </div>
                            <div class="col-md-8">
                                {{ form_label(stepForm.instruction, 'Instruction') }}
                                {{ form_widget(stepForm.instruction, {attr: {class: 'form-control form-control-sm', rows: 2}}) }}
                            </div>
                            <div class="col-md-2">
                                {{ form_label(stepForm.durationMin, 'Durée (min)') }}
                                {{ form_widget(stepForm.durationMin, {attr: {class: 'form-control form-control-sm', placeholder: 'Durée (min)'}}) }}
                            </div>
                            <div class="col-md-1">
                                <button
                                    type="button"
                                    class="btn btn-outline-danger btn-sm"
                                    data-action="live#action"
                                    data-live-action-param="removeCollectionItem"
                                    data-live-name-param="{{form.recipeSteps.vars.full_name}}"
                                    data-live-index-param="{{key}}"
                                >
                                    {{ ux_icon('mdi:delete') }}
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="text-center text-muted py-3">
                    Aucune étape. Cliquez sur "Ajouter une étape" pour commencer.
                </p>
            {% endfor %}
        </div>
    </div>
    
    <div class="d-flex justify-content-between">
        <a href="{{ path('admin_recipe_index') }}" class="btn btn-outline-secondary">
            {{ ux_icon('mdi:arrow-left') }} Annuler
        </a>
        <button
            type="button"
            class="btn btn-primary"
            data-action="live#action:prevent"
            data-live-action-param="save"
        >
            {{ ux_icon('mdi:content-save') }} Enregistrer la recette
        </button>
    </div>

    
    {{ form_end(form) }}
    
    {# Modal pour créer un nouvel ingrédient #}
    {% component BootstrapModal with {id: 'new-ingredient-modal'} %}
        {% block modal_header %}
            <h5 class="modal-title">Nouvel ingrédient</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        {% endblock %}
        {% block modal_body %}
            <twig:NewIngredientForm />
        {% endblock %}
    {% endcomponent %}
</div>

