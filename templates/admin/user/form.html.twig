{% extends 'admin/base.html.twig' %}

{% block title %}{{ is_edit ? 'Modifier' : 'Nouvel' }} utilisateur{% endblock %}
{% block header_title %}{{ is_edit ? 'Modifier' : 'Nouvel' }} utilisateur{% endblock %}

{% block body %}
<div class="admin-card">
    <div class="admin-card-header">
        <h5 class="admin-card-title">{{ is_edit ? 'Modifier l\'utilisateur' : 'Nouvel utilisateur' }}</h5>
        <a href="{{ path('admin_user_index') }}" class="btn btn-outline-secondary btn-sm">
            {{ ux_icon('mdi:arrow-left') }} Retour
        </a>
    </div>
    <div class="admin-card-body">
        {{ form_start(form) }}
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.email) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.plainPassword, {
                        help: is_edit ? 'Laissez vide pour conserver le mot de passe actuel' : null
                    }) }}
                </div>
            </div>
            
            <div class="row mt-3">
                <div class="col-md-6">
                    {{ form_row(form.roles) }}
                </div>
            </div>
            
            <div class="mt-4">
                <button type="submit" class="btn btn-primary">
                    {{ ux_icon('mdi:content-save') }} {{ is_edit ? 'Modifier' : 'Cr√©er' }}
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

