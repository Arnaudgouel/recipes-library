{% extends 'base.html.twig' %}

{% block title %}Accueil - Recettes de cuisine{% endblock %}

{% block body %}
  <section class="container-fluid py-5" style="background-color: var(--bs-body-bg);">
    <div class="container">
      <!-- Section Recettes de la saison -->
      {% if seasonRecipes|length > 0 %}
      <div class="row mb-5">
        <div class="col-12">
          <h2 class="mb-4 text-center">
            Recettes de {{ Recipe.getAvailableSeasons()[currentSeason] }}
          </h2>
          <div class="row">
            {% for recipe in seasonRecipes %}
              {{ include('recipe/card.html.twig', { recipe: recipe }) }}
            {% endfor %}
          </div>
        </div>
      </div>
      {% endif %}

      <!-- Section Recettes aléatoires -->
      {% if randomRecipes|length > 0 %}
      <div class="row">
        <div class="col-12">
          <h2 class="mb-4 text-center">Recettes à découvrir</h2>
          <div class="row">
            {% for recipe in randomRecipes %}
              {{ include('recipe/card.html.twig', { recipe: recipe }) }}
            {% endfor %}
          </div>
        </div>
      </div>
      {% endif %}

      <!-- Message si aucune recette -->
      {% if seasonRecipes|length == 0 and randomRecipes|length == 0 %}
      <div class="row">
        <div class="col-12 text-center py-5">
          <h3>Aucune recette disponible pour le moment</h3>
          <p class="text-muted">Revenez bientôt pour découvrir de nouvelles recettes !</p>
        </div>
      </div>
      {% endif %}
    </div>
  </section>
{% endblock %}

