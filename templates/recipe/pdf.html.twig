<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{{ recipe.title }}</title>
    <style>
        @page {
            margin: 2cm;
        }
        body {
            font-family: Arial, sans-serif;
            font-size: 12pt;
            line-height: 1.6;
            color: #333;
        }
        h1 {
            font-size: 24pt;
            color: #362121;
            margin-bottom: 10px;
            border-bottom: 2px solid #D2691E;
            padding-bottom: 10px;
        }
        h2 {
            font-size: 18pt;
            color: #362121;
            margin-top: 20px;
            margin-bottom: 15px;
            border-bottom: 1px solid #D2691E;
            padding-bottom: 5px;
        }
        h3 {
            font-size: 14pt;
            color: #4b2e2d;
            margin-top: 15px;
            margin-bottom: 10px;
        }
        .recipe-meta {
            margin: 15px 0;
            padding: 10px;
            background-color: #f5f5dc;
            border-left: 4px solid #D2691E;
        }
        .recipe-meta p {
            margin: 5px 0;
        }
        .ingredients-list {
            margin: 15px 0;
        }
        .ingredient-item {
            margin: 8px 0;
            padding: 5px;
        }
        .ingredient-name {
            font-weight: bold;
        }
        .steps-list {
            margin: 15px 0;
        }
        .step-item {
            margin: 15px 0;
            padding: 10px;
            background-color: #f9f9f9;
            border-left: 3px solid #4b2e2d;
        }
        .step-number {
            font-weight: bold;
            color: #D2691E;
            font-size: 14pt;
        }
        .description {
            margin: 15px 0;
            font-style: italic;
            color: #666;
        }
        .footer {
            margin-top: 30px;
            padding-top: 10px;
            border-top: 1px solid #ddd;
            font-size: 10pt;
            color: #999;
            text-align: center;
        }
    </style>
</head>
<body>
    <h1>{{ recipe.title }}</h1>

    {% if recipe.description %}
    <div class="description">
        {{ recipe.description|raw }}
    </div>
    {% endif %}

    <div class="recipe-meta">
        {% if recipe.prepMinutes %}
        <p><strong>Temps de préparation :</strong> {{ recipe.prepMinutes }} minutes</p>
        {% endif %}
        {% if recipe.cookMinutes %}
        <p><strong>Temps de cuisson :</strong> {{ recipe.cookMinutes }} minutes</p>
        {% endif %}
        {% if recipe.servings %}
        <p><strong>Nombre de personnes :</strong> {{ recipe.servings }}</p>
        {% endif %}
    </div>

    {% if recipe.recipeIngredients|length > 0 %}
    <h2>Ingrédients</h2>
    <div class="ingredients-list">
        {% for ingredient in recipe.recipeIngredients %}
        <div class="ingredient-item">
            <span class="ingredient-name">{{ ingredient.ingredient.name }}</span>
            {% if ingredient.formattedQuantity %}
                - {{ ingredient.formattedQuantity }}
                {% if ingredient.unit %}
                    {{ ingredient.unit.pluralLabel and ingredient.formattedQuantity > 1 ? ingredient.unit.pluralLabel : ingredient.unit.label }}
                {% endif %}
            {% endif %}
            {% if ingredient.note %}
                <em> ({{ ingredient.note }})</em>
            {% endif %}
        </div>
        {% endfor %}
    </div>
    {% endif %}

    {% if recipe.recipeSteps|length > 0 %}
    <h2>Préparation</h2>
    <div class="steps-list">
        {% for step in recipe.recipeSteps|sort((a, b) => a.position <=> b.position) %}
        <div class="step-item">
            <span class="step-number">Étape {{ step.position }} :</span>
            <p>{{ step.instruction }}</p>
        </div>
        {% endfor %}
    </div>
    {% endif %}

    <div class="footer">
        <p>Généré le {{ 'now'|date('d/m/Y à H:i') }}</p>
    </div>
</body>
</html>

