<div class="col-lg-4 col-md-6 mb-4">
  <a href="{{ path('app_recipe_show', { id: recipe.id }) }}" class="d-block text-decoration-none text-reset">
    <div class="card h-100 recipe-card bg-white">
        {{ include('recipe/image.html.twig', { recipe: recipe }) }}   
        <div class="card-body d-flex flex-column">
            <h5 class="card-title">{{ recipe.title }}</h5>
            
            {% if recipe.description %}
                <p class="card-text text-muted flex-grow-1">
                    {{ recipe.description|slice(0, 120) }}{% if recipe.description|length > 120 %}...{% endif %}
                </p>
            {% endif %}

            <div class="recipe-meta mt-auto">
                <div class="row text-center">
                    {% if recipe.servings %}
                        <div class="col-4">
                            <small class="text-muted">
                                {{ recipe.servings }} portion(s)
                            </small>
                        </div>
                    {% endif %}
                    {% if recipe.prepMinutes %}
                        <div class="col-4">
                            <small class="text-muted">
                                {{ this.formatTime(recipe.prepMinutes) }}
                            </small>
                        </div>
                    {% endif %}
                    {% if recipe.cookMinutes %}
                        <div class="col-4">
                            <small class="text-muted">
                                {{ this.formatTime(recipe.cookMinutes) }}
                            </small>
                        </div>
                    {% endif %}
                </div>
            </div>
            <span class="btn btn-secondary mt-2">Voir la recette</span>
        </div>
    </div>
  </a>
</div>